%.o : %.cpp
	$(CXX) $(CXXFLAGS) -I. $(BLASINC) $(QUADINC) -c $< -o $@

libtmblas.a: $(OBJS)
	$(AR) $@ $?


clean:
	-rm -f $(OBJS) libtmblas.a

tar:
	tar czvf tmblas.tar.gz Makefile tmblasarch.[ch]pp gemm.[ch]pp gemmt.[ch]pp trsv.[ch]pp tmblas.hpp test.cpp testoct.cpp util.hpp
